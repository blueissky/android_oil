<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mycaraccount"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mycaraccount.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mycaraccount.MenuActivity"
            android:label="主菜单"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.example.mycaraccount.MainActivity"
            android:label="加油录入"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.example.mycaraccount.OtherActivity"
            android:label="其他录入"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.example.mycaraccount.DetailActivity"
            android:label="费用明细"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.example.mycaraccount.YearReportActivity"
            android:label="年度报告"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.example.mycaraccount.ScaleActivity"
            android:label="年度比例"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.example.mycaraccount.MonthReportActivity"
            android:label="月份报告"
            android:launchMode="singleTask" >
        </activity>
    </application>
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
